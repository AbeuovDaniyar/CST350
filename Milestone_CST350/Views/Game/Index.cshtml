@using Milestone_CST350.Models
@model Milestone_CST350.Models.Board

@{
    string[] imagename = { "0.png", "1.png", "2.png", "3.png", "4.png", "5.png", "6.png", "7.png", "8.png", "bomb.png", "facingDown.png", "flagged.png", "sun.png" };
}

<style>
    .game-button {
        width: 70px;
        height: 70px;
    }

    .cell-img {
        width: 64px;
    }

    .cell {
        width: 70px;
        height: 70px;
    }

    .game-board {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div>
                <form asp-action="restart">
                    <input type="submit" class="btn btn-primary" value="Play Again" onclick="StopTimer();" />
                </form>

                <form asp-action="SaveGame">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </form>
            </div>
        </div>
        <div class="col-sm">
            <form asp-action="ChangeDifficulty">
                <select class="form-select" name="difficultyLvlv">
                    <option value="easy">Easy</option>
                    <option value="medium">Medium</option>
                    <option value="hard">Hard</option>
                </select>
                <button type="submit" class="btn btn-secondary">Change Difficulty</button>
            </form>
        </div>
        <div class="col-sm">
            <div class="timer">
                <span id="lblCount">0</span>sec
            </div>
        </div>
        <div class="col-sm">
            <form asp-action="ShowGames">
                <input type="submit" class="btn btn-primary" value="Saved Games" />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <div class="game-board mt-4">
                @{
                    Html.RenderPartial("ShowOneButton");
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <div class="messageArea">

            </div>
        </div>
        <div class="col-sm">
            <div class="player-stats">

            </div>
        </div>
    </div>
</div>